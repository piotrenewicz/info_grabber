<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/InfoTitle_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:width="200dp"
        android:paddingLeft="20dp"
        android:text="Example "
        android:textColor="@color/linia"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/InfoContent_field"
        app:layout_constraintStart_toStartOf="@+id/WebsiteDomain"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WebsiteDomain"
        android:layout_width="109dp"
        android:layout_height="26dp"
        android:paddingLeft="20dp"
        android:text="example.com"
        android:textColor="@color/linia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InfoTitle_field" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/linia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/InfoContent_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="..."
        android:layout_marginLeft="200dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="left" />

</androidx.constraintlayout.widget.ConstraintLayout>